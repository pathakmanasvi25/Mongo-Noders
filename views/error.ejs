  @media screen and (max-width:496px)
  {
    .alert-success
    {
        width: 250px;
    }
    .alert-danger
    {
        width: 250px;
    }
  }
  .manubtn{
font-weight: bold;
font-size: 20px;
background-color:#ffffff;
opacity: 0.75;
color:rgb(110, 62, 46) ;
margin: 20px;
border-radius: 12px;
padding:5px;
width: 124px;
box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
.manubtnA{
font-weight: bold;
font-size: 10px;
background-color:#ffffff;
opacity: 0.75;
color: rgb(110, 62, 46);
margin: 20px;
border-radius: 12px;
padding:5px;
width: 50px;
box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
</style>
</head>

<body>
    <div class="alert">
        <% if (message != "") { %>
        <div class="alert-success">
            <%= message %><br>
            <form action="/backa" method="post" class="manubtn">
               <input type="submit" name="submit" value="Okay">
            </form>
        </div>
        <% } %>
        
        <% if (error != "") { %>
        <div class="alert-danger">
            <%= error %><br>
            <form action="/backd" method="post" class="manubtn">
                <input type="submit" name="submit" value="Try Again">
             </form>
        </div>
        <% } %>
    </div>
</body>

</html>